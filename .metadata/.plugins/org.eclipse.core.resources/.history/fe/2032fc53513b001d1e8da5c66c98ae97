package es.florida.tema1;

import java.util.Scanner;

public class AP14 {

	public static double calcularDiametro(double ratio) {
		double diametro = ratio*2;
		return diametro;
	}
	public static double calcularArea(double ratio) {
		double area = Math.PI*(ratio*2);
		return area;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		System.out.print("Dime unos grados centigrados: ");
		double radio = sc.nextDouble();
		double diametro = calcularDiametro(radio);
		System.out.println("Grados Centigrados: "+ String.format("%.3f", radio));
		System.out.println("Grados Fahrenheit: "+ String.format("%.1f", diametro));
	}

}
