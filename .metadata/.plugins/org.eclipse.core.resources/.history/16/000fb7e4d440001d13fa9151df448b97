			String tipo = sc.next();
			String modelo = sc.next();
			Vehiculo vehi = new Vehiculo(tipo,marca,modelo);
			vehiculos.add(vehi);
			index++;
		} while (!nombres.get(index - 1).equals("0"));
		System.out.println("Nombres: ");
